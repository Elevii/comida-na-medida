<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ComidaNaMedida" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Cor principal (botões, foco, etc) -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">#FFFFFF</item> <!-- texto em cima do botão primário -->

        <!-- Cor secundária (para ações de sucesso, como salvar) -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorSurface</item>

        <!-- Cores de erro -->
        <item name="colorError">@color/colorError</item>

        <!-- Estilo dos botões -->
        <item name="materialButtonStyle">@style/Widget.App.CustomButton</item>

        <!-- Estilo dos inputs -->
        <item name="textInputStyle">@style/Widget.App.CustomTextInput</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="Theme.ComidaNaMedida" parent="Base.Theme.ComidaNaMedida" />

    <style name="Widget.App.CustomButton" parent="Widget.Material3.Button">
        <item name="cornerRadius">@dimen/corner</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

    <style name="Widget.App.ResultButton" parent="Widget.Material3.Button">
        <item name="cornerRadius">@dimen/corner</item>
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>


    <style name="Widget.App.CustomDropDownStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/colorBackgroundInputs</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="hintTextColor">@color/gray</item>
        <item name="android:textColor">@color/textColorBlack</item>
    </style>

    <style name="Widget.App.CustomTextInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/colorBackgroundInputs</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="hintTextColor">@color/gray</item>
        <item name="android:textColor">@color/textColorBlack</item>
    </style>

</resources>